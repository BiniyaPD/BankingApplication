@model BankingApp.WebApp.Models.AccountVM

@{
    ViewData["Title"] = "AddAccount";
}
 

<h4>Account Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAccount" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select class="form-control" asp-for="AccountType" name="accountType" id="accountType" aria-label="Default select example">
                    <option value="Savings">Savings Account</option>
                    <option value="Current">Current Account</option>
                    <option value="Corporate">Corporate Account</option>
                </select> 
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group" name="hidden-panel" id="hidden-panel">
                <label asp-for="TinNumber" class="control-label"></label>
                <input asp-for="TinNumber" class="form-control" />
                <span asp-validation-for="TinNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tin" class="control-label"></label>
                <input asp-for="Tin" class="form-control" />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-outline-danger"/>
            </div>
        </form>
    </div>
</div>
@section Scripts{ 
            <script>
                $(document).ready(function() 
                {
                    $("#hidden-panel").hide()
                    $("#accountType").change(function() 
                    {
                        if ($("#accountType").val() == "Current") {
                            $("#hidden-panel").show()
                        } else {
                            $("#hidden-panel").hide()
                        }
                    })
                }); 
        </script>  
}
